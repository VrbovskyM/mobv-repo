        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#C8C8C8</item>
    </style>
    <style name="LargeTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SmallTextStyle" parent="BaseTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NavButtonStyle">
        <item name="android:tint">@color/btn_text_grey</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">@color/btn_text_grey</item>
        <item name="android:backgroundTint">@color/button_green</item>
    </style>

</resources>